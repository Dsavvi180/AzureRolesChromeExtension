{
  "manifest_version": 3,
  "name": "Azure Roles Activator",
  "version": "1.0",
  "description": "Select and activate Azure roles.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
